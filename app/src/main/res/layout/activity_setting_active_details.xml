<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/screen_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/title_back"/>

    <TextView
        android:id="@+id/activiety_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/longbox"
        android:text="活动编号"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="显示文字:"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/colorFloatingButton_press"/>
        <EditText
            android:id="@+id/activiety_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:hint="请输入文字介绍内容"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="语音介绍:"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/colorFloatingButton_press"/>
        <EditText
            android:id="@+id/activiety_speak"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:hint="请输入语音介绍内容"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="图片路径:"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/colorFloatingButton_press"/>
        <EditText
            android:id="@+id/activiety_src"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:hint="请输入图片路径"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"/>
    </LinearLayout>


    <Button
        android:id="@+id/commit_set_activiety"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/longbox"
        android:layout_gravity="center"
        android:text="确认"
        android:textSize="30dp"
        android:textColor="@color/white"/>

</LinearLayout>