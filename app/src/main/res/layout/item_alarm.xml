<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:background="@drawable/longbox"
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/item_alarm_type"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/work"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间：xxxx"
            android:textSize="30dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/item_alarm_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地点：xxxx"
            android:textSize="30dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/item_alarm_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注：xxxx"
            android:textSize="30dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/item_alarm_remove"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/one"
        android:layout_gravity="center"/>
</LinearLayout>