<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/screen_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/finish_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:src="@drawable/return_d" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="返回"
            android:layout_centerVertical="true"
            android:textColor="@color/colorFloatingButton_press"
            android:textSize="22dp"
            android:layout_toRightOf="@+id/finish_setting"/>

        <ImageView
            android:id="@+id/home_setting"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/home_d"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->
        <!---->
    <!--</ScrollView>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/setting_welcom_words"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="迎宾词"
                android:textSize="22sp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/longbox"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/setting_activities"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="活动介绍"
                android:textSize="22sp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/longbox"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/setting_exhibition_introduce"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="展厅介绍"
                android:textSize="22sp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/longbox"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/setting_answer"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="业务问答"
                android:textSize="22sp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/longbox"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/setting_data_plan"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="日程安排"
                android:textSize="22sp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/longbox"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/setting_password"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="修改口令"
                android:textSize="22sp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/longbox"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/setting_default_mode"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="默认模式"
                android:textSize="22sp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/longbox"
                android:textColor="@color/white"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>